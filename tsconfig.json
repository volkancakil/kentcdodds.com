{
	"include": ["**/*.mdx", "**/*.ts", "**/*.tsx"],
	"extends": ["@epic-web/config/typescript"],
	"compilerOptions": {
		"typeRoots": ["./types", "./node_modules/@types"],
		"allowJs": true,
		"paths": {
			"#app/*": ["./app/*"],
			"#tests/*": ["./tests/*"]
		}
	},
	"mdx": {
		"checkMdx": true
	}
}
